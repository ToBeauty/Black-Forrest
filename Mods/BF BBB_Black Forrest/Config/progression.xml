	<!-- Hier verwende ich "set" für die gesamte effect_group statt für einzelne Elemente, weil zu viel geändert wird -->
	<set xpath='//crafting_skill[@name="craftingClubs"]/effect_group'>
		<passive_effect name="RecipeTagUnlocked" operation="base_set" level="1,100"  value="1" tags="meleeWpnClubT0WoodenClub"/>
		<passive_effect name="RecipeTagUnlocked" operation="base_set" level="11,100" value="1" tags="meleeWpnClubT1BaseballBat"/>
		<passive_effect name="RecipeTagUnlocked" operation="base_set" level="36,100" value="1" tags="meleeWpnClubT3SteelClub"/>
		<passive_effect name="RecipeTagUnlocked" operation="base_set" level="70,100" value="1" tags="meleeWpnClubT3MorgenSternClub"/>

		<passive_effect name="CraftingTier" operation="base_add" level="2,4,6,8,10,100"     value="1,2,3,4,5,5" tags="meleeWpnClubT0WoodenClub"/>
		<passive_effect name="CraftingTier" operation="base_add" level="15,20,25,30,35,100" value="1,2,3,4,5,5" tags="meleeWpnClubT1BaseballBat"/>
		<passive_effect name="CraftingTier" operation="base_add" level="42,48,54,60,66,100" value="1,2,3,4,5,5" tags="meleeWpnClubT3SteelClub"/>
		<passive_effect name="CraftingTier" operation="base_add" level="76,82,88,94,100"    value="1,2,3,4,5"   tags="meleeWpnClubT3MorgenSternClub"/>
	</set>

	<csv xpath='//unlock_entry[contains(@item,"drugSteroids")]/@item'									delim="," op="add">Nebel_Block_00BlockVariantHelper,Nebel_Block_00_RotBlockVariantHelper,Nebel_Block_00_BlauBlockVariantHelper,Nebel_Block_00_GelbBlockVariantHelper</csv>
	<csv xpath='//passive_effect[@name="RecipeTagUnlocked" and contains(@tags,"drugSteroids")]/@tags'	delim="," op="add">Nebel_Block_00BlockVariantHelper,Nebel_Block_00_RotBlockVariantHelper,Nebel_Block_00_BlauBlockVariantHelper,Nebel_Block_00_GelbBlockVariantHelper</csv>

</configs>