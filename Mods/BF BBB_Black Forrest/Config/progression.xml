<configs>

	<set xpath='//crafting_skill[@name="craftingClubs"]/@max_level'>100</set>

	<set xpath='//crafting_skill[@name="craftingClubs"]/display_entry[@item="meleeWpnClubT3SteelClub"]/@unlock_level'>36,42,48,54,60,66</set>
	<append  xpath='//crafting_skill[@name="craftingClubs"]'>
		<display_entry item="meleeWpnClubT3MorgenSternClub" unlock_level="70,76,82,88,94,100"/>
