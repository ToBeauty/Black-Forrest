<AGF-HUDPlus>


<!--New Lockable Slots for 7d2d version 2.2-->
	<set xpath="/windows/window[@name='windowLooting']/panel/rect/button[@name='btnToggleLockMode']/@style">icon32px, press, agfLock</set>
	<set xpath="/windows/window[@name='windowVehicleStorage']/panel/rect/button[@name='btnToggleLockMode']/@style">icon32px, press, agfLock</set>


	<remove xpath="/windows/window[@name='windowLooting']/rect[@name='content']/grid[@name='queue']/item_stack"></remove>
	<append xpath="/windows/window[@name='windowLooting']/rect[@name='content']/grid[@name='queue']">
       <item_stackAGF name="0"/>
	</append>	

	<remove xpath="/windows/window[@name='windowVehicleStorage']/grid[@name='queue']/item_stack"></remove>
	<append xpath="/windows/window[@name='windowVehicleStorage']/grid[@name='queue']">
       <item_stackAGF name="0"/>
	</append>
	
	
	<remove xpath="//sprite[@sprite='ui_game_loot_stage_bad']"/>	
	
	
</AGF-HUDPlus>


