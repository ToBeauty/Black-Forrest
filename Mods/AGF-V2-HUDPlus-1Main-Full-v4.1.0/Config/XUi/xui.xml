<AGF-HUDPlus>

	<remove xpath="//window[@name='windowEntering']"/>
	<remove xpath="/xui/ruleset/window_group[@name='toolbelt']/window[@name='windowLocation']"/>
	
	<append xpath="/xui/ruleset/window_group[@name='compass']">
		<window name="windowLocation"/>
	</append>
	
	<!--To have a separate page for the checklist-->
	<insertbefore xpath="/xui/ruleset/window_group[@name='crafting']">
		<window_group name="schematics" open_backpack_on_open="false" close_compass_on_open="false">
			<window name="Schematics"/>
		</window_group>
	</insertbefore>

</AGF-HUDPlus>
